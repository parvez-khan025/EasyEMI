<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardFragment"
    android:orientation="vertical"
    android:background="@color/lightGray"
    android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/primaryBlue"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher_round"
                android:contentDescription="Logo" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EasyEMI"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:background="@android:color/transparent"
                android:contentDescription="Profile"
                card_view:tint="@color/white" />
        </LinearLayout>

        <!-- Quick Stats Row -->
        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="14dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTodaySales"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/primaryGreen"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTodaySales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="৳ 0"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTodaySalesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Sales"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardInstallmentsDue"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/primaryBlue"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvInstallmentsDue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="৳ 0"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvInstallmentsDueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Installments"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Secondary stat: Monthly Revenue -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMonthRevenue"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvMonthRevenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="৳ 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkGray" />

                    <TextView
                        android:id="@+id/tvMonthRevenueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Revenue This Month"
                        android:textSize="12sp"
                        android:textColor="@color/darkGray" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgTrend"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    card_view:tint="@color/primaryGreen" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Menu Grid (2 columns, 3 rows) -->
        <GridLayout
            android:id="@+id/menuGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginBottom="16dp">

            <!-- New Sale -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNewSale"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="14dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/primaryGreen">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icNewSale"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_add"
                        card_view:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvNewSale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Sale"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Products -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProducts"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="14dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icProducts"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        card_view:tint="@color/primaryBlue" />

                    <TextView
                        android:id="@+id/tvProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products"
                        android:textStyle="bold"
                        android:textColor="@color/darkGray"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Customers -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCustomers"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="14dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icCustomers"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        card_view:tint="@color/primaryGreen" />

                    <TextView
                        android:id="@+id/tvCustomers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customers"
                        android:textStyle="bold"
                        android:textColor="@color/darkGray"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Installments -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardInstallments"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="14dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/primaryBlue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icInstallments"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        card_view:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvInstallments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Installments"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Transactions -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTransactions"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="14dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icTransactions"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_send"
                        card_view:tint="@color/primaryBlue" />

                    <TextView
                        android:id="@+id/tvTransactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transactions"
                        android:textStyle="bold"
                        android:textColor="@color/darkGray"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reports -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardReports"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="14dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/primaryBlue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icReports"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/tvReports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reports"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Recent Activity / Transactions -->
        <TextView
            android:id="@+id/tvRecentHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Activity"
            android:textStyle="bold"
            android:textColor="@color/darkGray"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentTransactions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

    </LinearLayout>
