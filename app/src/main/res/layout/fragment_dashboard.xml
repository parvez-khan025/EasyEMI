<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DashboardFragment">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Dashboard"
                    android:textColor="@color/darkGray"
                    android:textSize="24sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <!-- Quick Stats Row -->
            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTodaySales"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/primaryGreen"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTodaySales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="৳ 0"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:text="Today's Sales"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardInstallmentsDue"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/primaryBlue"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvInstallmentsDue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="৳ 0"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:text="Last Sale"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Monthly Revenue -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMonthRevenue"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMonthRevenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="৳ 0"
                            android:textColor="@color/darkGray"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:text="Revenue This Month"
                            android:textColor="@color/darkGray"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        card_view:tint="@color/primaryGreen" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu Grid (2 columns, 3 rows) -->
            <GridLayout
                android:id="@+id/menuGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="3"
                android:useDefaultMargins="true">

                <!-- New Sale -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNewSale"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    card_view:cardBackgroundColor="@color/primaryGreen"
                    card_view:cardCornerRadius="14dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icNewSale"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@android:drawable/ic_menu_add"
                            card_view:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvNewSale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="New Sale"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Products -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProducts"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="14dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icProducts"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_list"
                            card_view:tint="@color/primaryBlue" />

                        <TextView
                            android:id="@+id/tvProducts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Products"
                            android:textColor="@color/darkGray"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Customers -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCustomers"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="14dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icCustomers"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            card_view:tint="@color/primaryGreen" />

                        <TextView
                            android:id="@+id/tvCustomers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Customers"
                            android:textColor="@color/darkGray"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Installments -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardInstallments"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    card_view:cardBackgroundColor="@color/primaryBlue"
                    card_view:cardCornerRadius="14dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icInstallments"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            card_view:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvInstallments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Installments"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Transactions -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTransactions"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    card_view:cardBackgroundColor="@color/primaryGreen"
                    card_view:cardCornerRadius="14dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icTransactions"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@android:drawable/ic_menu_send"
                            card_view:tint="@color/primaryBlue" />

                        <TextView
                            android:id="@+id/tvTransactions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Transactions"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Reports -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardExpenses"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="14dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icExpenses"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_expenses"
                            android:tint="@color/black"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:id="@+id/tvReports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Expenses"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Vendor -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardVendors"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="14dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icVendors"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@android:drawable/ic_menu_manage"
                            card_view:tint="@color/primaryGreen" />

                        <TextView
                            android:id="@+id/tvVendors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Vendors"
                            android:textColor="@color/darkGray"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Inventory -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardInventory"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    card_view:cardBackgroundColor="@color/primaryBlue"
                    card_view:cardCornerRadius="14dp"
                    card_view:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icInventory"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@android:drawable/ic_menu_sort_alphabetically"
                            card_view:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvInventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Inventory"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/glassy_nav_bg"
        android:elevation="8dp"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>