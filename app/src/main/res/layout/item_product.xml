<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginBottom="12dp"
    app:ignore="NamespaceTypo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_product_placeholder"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Product Name -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/darkGray"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toTopOf="@id/imgProduct"
            app:layout_constraintEnd_toStartOf="@id/btnEditProduct"
            android:layout_marginStart="12dp"/>

        <!-- Product Price -->
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price: à§³0"
            android:textSize="14sp"
            android:textColor="@color/primaryGreen"
            app:layout_constraintStart_toStartOf="@id/tvProductName"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"
            app:layout_constraintEnd_toEndOf="@id/tvProductName"
            android:layout_marginTop="4dp"/>

        <!-- Product Stock -->
        <TextView
            android:id="@+id/tvProductStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stock: 0"
            android:textSize="14sp"
            android:textColor="@color/darkGray"
            app:layout_constraintStart_toStartOf="@id/tvProductName"
            app:layout_constraintTop_toBottomOf="@id/tvProductPrice"
            app:layout_constraintEnd_toEndOf="@id/tvProductName"
            android:layout_marginTop="2dp"/>

        <!-- Edit Button -->
        <ImageButton
            android:id="@+id/btnEditProduct"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@android:color/transparent"
            android:contentDescription="Edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:tint="@color/primaryBlue" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btnDeleteProduct"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/transparent"
            android:contentDescription="Delete"
            app:layout_constraintTop_toBottomOf="@id/btnEditProduct"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            card_view:tint="#F44336" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
