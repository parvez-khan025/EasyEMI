<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Top Row: Name and Amount -->
        <TextView
            android:id="@+id/tvReportName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textColor="@color/darkGray"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvReportAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvReportPaymentMethod"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/tvReportAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="à§³ 2,500"
            android:textSize="16sp"
            android:textColor="@color/primaryGreen"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvReportName"
            app:layout_constraintBottom_toBottomOf="@id/tvReportName" />

        <!-- Bottom Row: Payment Method and Status -->
        <TextView
            android:id="@+id/tvReportPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textSize="14sp"
            android:textColor="@color/primaryBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReportName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvReportStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid"
            android:textSize="14sp"
            android:textColor="@color/primaryGreen"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvReportPaymentMethod"
            app:layout_constraintBottom_toBottomOf="@id/tvReportPaymentMethod" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
